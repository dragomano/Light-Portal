{
  "autoload": {
    "psr-4": {
      "Bugo\\LightPortal\\": "src\\Sources\\LightPortal"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-dom": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "ext-simplexml": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "consolidation/robo": "^5.1",
    "mikey179/vfsstream": "^1.6",
    "mockery/mockery": "^2.0.x-dev",
    "pear/archive_tar": "^1.6",
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-faker": "^3.0",
    "rector/rector": "^2.1"
  },
  "config": {
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "check": "vendor/bin/rector process --dry-run --clear-cache",
    "tests": "php -d memory_limit=512M vendor/bin/pest --colors=always",
    "tests-debug": "php -d memory_limit=512M vendor/bin/pest --colors=always --display-warnings",
    "tests-coverage": "php -d memory_limit=512M vendor/bin/pest --colors=always --coverage --min=30",
    "tests-coverage-clover": "php -d memory_limit=512M vendor/bin/pest --colors=always --min=30 --coverage-clover coverage.xml",
    "tests-coverage-html": "php -d memory_limit=512M vendor/bin/pest --colors=always --min=30 --coverage-html coverage",
    "assets": [
      "pnpm update",
      "pnpm run build",
      "pnpm run build:comments",
      "pnpm run build:plugins",
      "pnpm run build:sass",
      "pnpm run build:apps"
    ],
    "up": [
      "cd src/Sources/LightPortal && composer update --no-dev -o",
      "composer update"
    ],
    "release": ["vendor/bin/robo build"],
    "build": [
      "composer run up",
      "vendor/bin/robo build:default"
    ],
    "build:geek": [
      "composer run up",
      "vendor/bin/robo build:geek"
    ],
    "build:dev": [
      "cd src/Sources/LightPortal && composer update",
      "composer update",
      "vendor/bin/robo build:develop"
    ],
    "build:all": [
      "composer run assets",
      "composer run build",
      "vendor/bin/robo build:geek",
      "composer run build:dev"
    ]
  }
}
