{
  "require": {
    "php": "~8.1",
    "ext-dom": "*",
    "ext-intl": "*",
    "ext-simplexml": "*",
    "ext-zip": "*",
    "bugo/fa-php-helper": "^0.4",
    "bugo/smf-bricks": "^0.1",
    "bugo/smf-compat": "^0.2",
    "doctrine/event-manager": "^2.0",
    "eftec/bladeone": "^4.13",
    "league/container": "^4.2",
    "nette/robot-loader": "^4.0"
  },
  "require-dev": {
    "scssphp/scssphp": "^1.12"
  },
  "suggest": {
    "wikimedia/less.php": "Install this package if you want to use the Less compiler instead of Sass"
  },
  "config": {
    "vendor-dir": "Libs",
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "@php update_plugins.php",
      "@php create_index.php"
    ]
  }
}
