{
  "autoload": {
    "psr-4": {
      "Bugo\\LightPortal\\": "src\\Sources\\LightPortal"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-dom": "*",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "consolidation/robo": "^5.1",
    "pear/archive_tar": "^1.5",
    "pestphp/pest-plugin-faker": "^3.0",
    "pestphp/pest": "^3.8",
    "rector/rector": "^2.0",
    "simplemachines/forum": "^2.1"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "simplemachines/forum",
        "version": "2.1.6",
        "dist": {
          "url": "https://download.simplemachines.org/index.php/smf_2-1-6_install.zip",
          "type": "zip"
        }
      }
    }
  ],
  "config": {
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "check": "vendor/bin/rector process --dry-run --clear-cache",
    "tests": "vendor/bin/pest --colors=always",
    "tests-coverage": "vendor/bin/pest --colors=always --coverage --min=10",
    "tests-coverage-clover": "vendor/bin/pest --colors=always --min=10 --coverage-clover coverage.xml",
    "tests-coverage-html": "vendor/bin/pest --colors=always --min=10 --coverage-html coverage",
    "assets": [
      "pnpm update",
      "pnpm run build",
      "pnpm run build:comments",
      "pnpm run build:plugins",
      "pnpm run build:sass",
      "pnpm run build:apps"
    ],
    "up": [
      "cd src/Sources/LightPortal && composer update --no-dev -o",
      "composer update"
    ],
    "release": ["vendor/bin/robo build"],
    "build": [
      "composer run up",
      "vendor/bin/robo build:default"
    ],
    "build:geek": [
      "composer run up",
      "vendor/bin/robo build:geek"
    ],
    "build:dev": [
      "cd src/Sources/LightPortal && composer update",
      "composer update",
      "vendor/bin/robo build:develop"
    ],
    "build:all": [
      "composer run assets",
      "composer run build",
      "vendor/bin/robo build:geek",
      "composer run build:dev"
    ]
  }
}
